@model IssueManager.Models.ViewModels.Users.ChangeUserPasswordViewModel

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="app-container">
                <form method="post" asp-action="ChangeUserPassword" asp-controller="Users">
                <div class="d-flex flex-column flex-md-row gap-2 gap-md-0 justify-content-between mb-2">
                    <a asp-action="Index" class="back-link">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" />
                        </svg>
                        Back to List
                    </a>
                    <button type="submit" class="app-btn app-btn-main">Save</button>
                </div>
                <div class="app-header">
                    <h2 class="mb-0 fs-3">Password change</h2>
                    <p class="mb-0 opacity-75">Change password for user: @Model.Name (@Model.Email)</p>
                </div>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3" role="alert"></div>
                    <div class="row g-1">
                        <input type="hidden" asp-for="Id" />
                        <div class="col-12">
                            <div class="form-floating">
                                <input asp-for="Password" class="form-control app-form-control" type="password" />
                                <label asp-for="Password"></label>
                                <span asp-validation-for="Password" class="validation-message"></span>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <input asp-for="ConfirmPassword" class="form-control app-form-control" type="password" />
                                <label asp-for="ConfirmPassword"></label>
                                <span asp-validation-for="ConfirmPassword" class="validation-message"></span>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

