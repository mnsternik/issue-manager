@model IssueManager.Models.Category

@{
    ViewData["Title"] = "Edit category";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="app-container">
                <form asp-action="Edit">
                    <div class="d-flex justify-content-between mb-2">
                        <a asp-action="Index" class="back-link">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" />
                            </svg>
                            Back to List
                        </a>
                        <button type="submit" class="app-btn app-btn-main">Save</button>
                    </div>

                    <div class="app-header">
                        <h2 class="mb-0 fs-3">Edit category: @Model.Name</h2>
                        <p class="mb-0 opacity-75">Category ID: @Model.Id</p>
                    </div>

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3" role="alert"></div>

                    <input type="hidden" asp-for="Id" />

                    <div class="row g-4">
                        <div class="col-12">
                            <div class="form-floating">
                                <input asp-for="Name" class="form-control app-form-control" placeholder="Enter name" />
                                <label asp-for="Name"></label>
                                <span asp-validation-for="Name" class="validation-message"></span>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
