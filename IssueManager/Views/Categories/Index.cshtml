@model IssueManager.Models.ViewModels.Categories.CategoriesListViewModel; 

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="app-container">
        <div class="app-header">
            <h2 class="mb-0">Categories Management</h2>
            <p class="mb-0 opacity-75">View and manage all reuqest's categories</p>
        </div>

        <div class="d-flex flex-column flex-md-row-reverse gap-3 gap-md-0 justify-content-between mb-3" style="align-items:baseline">
            <div class="col-12 col-md-6" style="text-align: end">
                <a asp-action="Create" class="app-btn app-btn-create">Create</a>
            </div>
            <form class="col-12 col-md-6" asp-controller="Categories" asp-action="Index" method="get">
                <div class="d-flex gap-1">
                    <input class="form-control app-form-control w-100" type="text" name="search" placeholder="Search by category name" />
                    <button type="submit" class="app-link app-link-main">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-search btn-icon" viewBox="0 0 16 16">
                            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0" />
                        </svg>
                    </button>
                </div>
            </form>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger" role="alert">
                @TempData["ErrorMessage"]
            </div>
        }

        <div class="table-responsive">
            <table class="table app-table">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Categories[0].Name)</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Categories)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td style="text-align: right">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="app-link"> Details</a> | 
                                <a asp-action="Delete" asp-route-id="@item.Id" class="app-link app-link-delete">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <nav>
            <ul class="pagination">
                @if (Model.Categories.HasPreviousPage)
                {
                    <li class="page-item">
                        <a class="page-link" asp-route-pageIndex="@(Model.Categories.PageIndex - 1)" asp-route-search="@Model.SearchString">Previous</a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled"><span class="page-link">Previous</span></li>
                }

                @for (int i = 1; i <= Model.Categories.TotalPages; i++)
                {
                    <li class="page-item app-page-item @(i == Model.Categories.PageIndex ? "active" : "")">
                        <a class="page-link" asp-route-pageIndex="@i" asp-route-search="@Model.SearchString">@i</a>
                    </li>
                }

                @if (Model.Categories.HasNextPage)
                {
                    <li class="page-item">
                        <a class="page-link" asp-route-pageIndex="@(Model.Categories.PageIndex + 1)" asp-route-search="@Model.SearchString">Next</a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled"><span class="page-link">Next</span></li>
                }
            </ul>
        </nav>
    </div>
</div>
