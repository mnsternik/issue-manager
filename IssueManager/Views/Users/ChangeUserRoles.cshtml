@model IssueManager.Models.ViewModels.Users.ChangeUserRolesViewModel

@{
    ViewData["Title"] = "User roles";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="app-container">
                <form method="post" asp-action="ChangeUserRoles" asp-controller="Users">
                <div class="d-flex flex-column flex-md-row gap-2 gap-md-0 justify-content-between mb-2">
                    <a asp-action="Index" class="back-link">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" />
                        </svg>
                        Back to List
                    </a>
                    <button type="submit" class="app-btn app-btn-main">Save</button>
                </div>
                <div class="app-header">
                    <h2 class="mb-0 fs-3">Manage roles</h2>
                    <p class="mb-0 opacity-75">Add or remove roles for user: @Model.Name (@Model.Email)</p>
                </div>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3" role="alert"></div>
                    <div class="row g-2">
                        <p class="details-label">Assigned roles</p>
                        <input type="hidden" asp-for="Id" />
                        <div class="col-12">
                            <ul class="list-group app-list-group">
                                @for (int i = 0; i < Model.RolesList.AvailableRoles.Count; i++)
                                {
                                    <li class="list-group-item">
                                        <input class="form-check-input me-1"
                                               type="checkbox"
                                               id="roleCheckbox_@i"
                                               name="RolesList.SelectedRoles"
                                               value="@Model.RolesList.AvailableRoles[i]"
                                               checked="@Model.RolesList.CurrentRoles.Contains(Model.RolesList.AvailableRoles[i])" />
                                        <label class="form-check-label" for="roleCheckbox_@i">@Model.RolesList.AvailableRoles[i]</label>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

