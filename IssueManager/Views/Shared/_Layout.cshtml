﻿
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IssueManager</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap" rel="stylesheet">

    <link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png">
    <link rel="manifest" href="/favicon/site.webmanifest">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/IssueManager.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar app-navbar navbar-expand-md navbar-toggleable-md border-bottom box-shadow mb-3">
            <div class="container-fluid app-main-color">
                <a class="navbar-brand" asp-area="" asp-controller="Requests" asp-action="Index">IssueManager</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-md-inline-flex justify-content-between py-2">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link navbar-link" asp-area="" asp-controller="Requests" asp-action="Index">All Requests</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link navbar-link" asp-area="" asp-controller="Requests" asp-action="Create">New Request</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link navbar-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Administration
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item nav-link navbar-link" asp-area="" asp-controller="Users" asp-action="Index">Users</a>
                                </li>
                                <li>
                                    <a class="dropdown-item nav-link navbar-link" asp-area="" asp-controller="Teams" asp-action="Index">Teams</a>
                                </li>
                                <li>
                                    <a class="dropdown-item nav-link navbar-link" asp-area="" asp-controller="Categories" asp-action="Index">Categories</a>
                                </li>
                            </ul>
                        </li>
                        <li class="dropdown-divider"></li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>